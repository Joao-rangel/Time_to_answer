<%#= @admin.inspect %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Editando</h6>
    </div>
    <div class="card-body">
    <%= form_with(model: [:admins_backoffice, @admin ], local: true) do |form| %><%# local: true ->envia em HTML para o controler; padrÃ£o = JS %>
      <form class="mr-auto ml-md-3 my-2 my-md-0 mw-100">
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class:"form-control bg-light", placeholder:"Email..." %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.text_field :password, class:"form-control bg-light", placeholder:"Senha..." %>
        </div>

        <div class="form-group">
          <%= form.label :password_confirmation %>
          <%= form.text_field :password_confirmation, class:"form-control bg-light", placeholder:"Confirme a senha..." %>
        </div>
        <br>

        <button class="btn btn-primary btn-icon-split">
          <span class="icon text-white-50">
            <i class="fas fa-arrow-right"></i>
          </span>
          <span class="text">Enviar</span>
        </button>
      <% end %>
    </div>
  </div>
</div>